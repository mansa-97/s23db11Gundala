extends layout
block content
  h1= title
  - function computeValue(i, j) {
  -   if (i === j) {
  -     return 1;
  -   } else if (i === j + 1) {
  -     return 2;
  -   } else if (i === j - 1) {
  -     return i + 1;
  -   } else {
  -     return 0;
  -   }
  - }
  p  query: #{query.rows},#{query.cols}
  - let rows=Number(query.rows)
  - let cols=Number(query.cols)
  - if(!Number.isInteger(rows) || !Number.isInteger(cols)){
     p Rows and columns are not Integers
  - }
  - else if(rows<1 || rows>10){
     p  Out of range:Rows should be in the range of 1 to 10
  - }
  - else if(cols<1 || cols>10){
     p  Out of range:Columns should be in the range of 1 to 10
  - }
  - else{
     table#outer
      - for(let i=0; i<rows; i++) {
        tr#middle 
         - for(let j=0; j<cols; j++){
            td= computeValue(i, j)

         - }
      - }
  - }
